{
  "compilerOptions": {
    "target": "es2018",                                 
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                   
    "module": "commonjs",                                
    "resolveJsonModule": true,                       
    "sourceMap": true,                               
    "outDir": "./build/compiled",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
   "strictPropertyInitialization": false,            
    "skipLibCheck": true,
    "declaration": true                              
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
