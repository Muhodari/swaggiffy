{
  "name": "swaggify",
  "displayName": "swaggify",
  "version": "0.0.1",
  "description": "A zero-config Node.js Swagger Documentation",
  "main": "src/server.ts",

  "scripts": {
    "dev-stage": "npx nodemon ./src/server.ts",
    "dev": "ts-node ./src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "tsc",
    "lint": "npx eslint . --ext .ts --fix",
    "prepare": "husky install"
  },
  "keywords": [
    "ts",
    "js",
    "swagger",
    "docs",
    "nest"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/divinirakiza/swaggify.git"
  },
  "bugs": {
    "url": "https://github.com/divinirakiza/swaggify/issues"
  },
  "files": [
    "build",
    "src"
  ],
  "engines": {
    "node": ">=8"
  },
  "homepage": "https://github.com/divinirakiza/swaggify#readme",
  "author": "Divin Irakiza",
  "license": "MIT",
  
  "devDependencies": {
    "@types/node": "^16.11.10",
    "@types/pino": "^7.0.5",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "husky": "^7.0.4",
    "pino": "^7.5.1",
    "prettier": "^2.5.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.2.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "chalk": "^5.0.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.3.0",
    "express": "^4.17.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint"
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  }
}
